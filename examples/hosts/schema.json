{
    "type": "object",
    "additionalProperties": false,
    "required": [ "hostname", "region", "country", "environment", "host_type" ],
    "properties": {
        "hostname": {
            "type": "string",
            "pattern": "^([a-z0-9]([a-z0-9-]{0,61}[a-z0-9])?\\.)+[a-zA-Z]{2,6}$"
        },
        "region": {
            "type": "string",
            "enum": [ "amer", "apac", "emea" ]
        },
        "country": {
            "type": "string",
            "enum": [ "nl", "us", "au" ]
        },
        "environment": {
            "type": "string",
            "enum": [ "dev", "qa", "prod" ]
        },
        "host_type": {
            "type": "string",
            "enum": [ "desktop", "server" ]
        },
        "roles": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [ "salt-master" ]
            }
        },
        "network": {
            "type": "object",
            "additionalProperties": false,
            "required": [ "gateway", "interfaces" ],
            "properties": {
                "gateway": {
                    "type": "string",
                    "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$"
                },
                "interfaces": {
                    "type": "object",
                    "additionalProperties": false,
                    "patternProperties": {
                        "^eth[0-9]+$": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [ "dhcp" ],
                            "properties": {
                                "dhcp": {
                                    "string": "boolean"
                                },
                                "hwaddr": {
                                    "type": "string",
                                    "pattern": "^([0-9a-f]{1,2}\\:){5}[0-9a-f]{1,2}$"
                                },
                                "ipv4": {
                                    "type": "string",
                                    "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$"
                                },
                                "netmask": {
                                    "type": "string",
                                    "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$"
                                },
                                "fqdn": {
                                    "type": "string",
                                    "pattern": "^([a-z0-9]([a-z0-9-]{0,61}[a-z0-9])?\\.)+[a-zA-Z]{2,6}$"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
