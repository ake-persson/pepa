{
    "user": {
        "title": "User validation",
        "type": "object",
        "properties": {
            "username": { "type": "username" },
            "name": { "type": "name" },
            "email": { "type": "email" },
            "ssh_key": { "type": "string" }
        },
        "required": [ "username", "name", "email" ]
    },
    "host": {
        "title": "Host validation",
        "type": "object",
        "properties": {
            "host": { "type": "hostname" },
            "region": { "type": "region" },
            "country": {
                "type": "country",
                "maxLength": 2
            },
            "roles": { "type": "roles" },
            "environment": { "type": "environment" }
        },
        "required": [ "host", "region", "country", "roles", "environment" ]
    }
}
